" display line numbers
set number

" change tab lenght
set  tabstop =3
set  shiftwidth =3
set  softtabstop =3

" indentation scripts
" filetype  indent plugin on

" mouse activation
set  mouse =a

" find parentheses
set  showmatch

" dictionnary and speeling
" set  spelllang =en,fr
" set  spell
" set  spellsuggest =5

imap  <C-Space> <C-X><C-O>
